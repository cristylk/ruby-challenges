<h1>People</h1>
<table>
	<thead>
		<!-- <th>ID</th> -->
		<th>Name</th>
		<th>Birthdate</th>
	</thead>
	<tbody>
		<% @people.each do |person| %>
			<tr>
				<!-- <td>
					<%= "#{person.id}" %>
				</td> -->
				<td>
					<a href="<%= "/people/#{person.id}" %>">
					<%= "#{person.first_name} #{person.last_name}" %>
				</a>
				</td>
				<td>
					<!--<%= "#{person.birthdate}" %> -->
					<%= "#{person.birthdate.strftime("%m")}/#{person.birthdate.strftime("%d")}/#{person.birthdate.strftime("%Y")}" %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>